<div class="span3">
  <div class="tabbable tabs-below">
    <div class="well">

    <div class="btn-group pull-right">
      <%= link_to '<i class="icon-ok"></i>'.html_safe, votes_path(:place => place), method: :post, remote: true, class: 'btn btn-mini' %>
      <% if @current_user == place.person %>
        <button class="btn btn-mini">
          <i class="icon-pencil"></i>
        </button>
        <button class="btn btn-mini btn-danger">
          <i class="icon-remove icon-white"></i>
        </button>
      <% end %>
    </div>

      <h3><%= place.name %></h3>
      <%= place.formatted_notes %>

      <div class="tab-content">

        <div class="tab-pane active" id="info<%= place.id %>">
          <dl class="dl-horizontal">
            <dt>Added by</dt>
            <dd><%= place.person.name %></dd>

            <% if place.leaving_at %>
              <dt>Leaving</dt>
              <dd><%= place.leaving_at.to_s(:time) %></dd>
            <% end %>

            <dt>Distance</dt>
            <dd><%= place.walkable? and t('.walking') or t('.driving') %></dd>
          </dl>
        </div>

        <% if place.walkable? %>

          <div class="tab-pane" id="people<%=place.id%>">
            <h4><%= place.people.count %> people are going</h4>
            <ul class="unstyled">
              <% place.people.each do |person| %>
              <li><%= person.name %></li>
              <% end %>
            </ul>
          </div>

        <% else %>

          <% place.car_owners.each do |owner, votes| %>
            <div class="tab-pane" id="car<%=owner.id%>">
              <h4>
                <i class="icon-road"></i>
                <%= owner.name %>

                <% if owner %>
                <span class="label"><%= owner.car.seats_left(place) %> left</span>
                <% end %>
              </h4>

              <ul class="unstyled">
                <% votes.each do |v| %>
                <li><%= v.person.name %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

        <% end %>

      </div>
    </div>

    <ul class="nav nav-tabs">
      <li class="active">
        <a href="#info<%=place.id%>" data-toggle="tab">
          <i class="icon-info-sign"></i>
        </a>
      </li>
      <% if place.walkable? %>

        <li>
          <a href="#people<%=place.id%>" data-toggle="tab">
            <span class="label label-inverse"><%= place.votes.count %></span>
            People
          </a>
        </li>

      <% else %>

        <li class="dropdown">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#">
            <i class="icon-road"></i>
            Drivers
            <b class="caret"></b>
          </a>

          <ul class="dropdown-menu">
            <% place.car_owners.each do |owner, votes| %>
            <li>
              <a href="#car<%= owner.id %>" data-toggle="tab">
                <span class="label label-info"><%= votes.size %></span>
                <%= owner and owner.name or "Other" %>
              </a>
            </li>
            <% end %>
          </ul>
        </li>

      <% end %>
    </ul>
  </div>
</div>

